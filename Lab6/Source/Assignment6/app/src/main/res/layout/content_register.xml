<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nsb.assignment6.register"
    tools:showIn="@layout/activity_register"
    android:background="@drawable/dd">


    <TextView
        android:text="Create Account"
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView3"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />







    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Choose Username"
            android:background="#340000ff"
            android:ems="20"
            android:id="@+id/editText4"
            android:layout_above="@+id/editText6"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter your name"
            android:background="#340000ff"
            android:textColor="@android:color/background_dark"
            android:ems="20"
            android:id="@+id/editText3"
            android:layout_above="@+id/editText4"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp" />

        <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:onClick="register"
            android:textColor="@android:color/background_light"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="20"
            android:background="#340000ff"
            android:id="@+id/editText5"
            android:hint="Enter your e-mail"
            android:layout_marginBottom="27dp"
            android:layout_above="@+id/currentaddress"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Choose Password"
            android:ems="20"
            android:background="#340000ff"
            android:id="@+id/editText6"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/editText5"
            android:layout_alignParentStart="true" />

        <EditText
            android:hint="Address Using google loction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#340000ff"
            android:ems="20"
            android:onClick="locateMe"
            android:id="@+id/currentaddress"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:onClick="register"
            android:id="@+id/takeimage"
            android:background="#ffffff"
            app:srcCompat="@android:drawable/ic_menu_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:contentDescription="Click Me"
            android:baselineAlignBottom="true"
            android:focusable="true"
            android:layoutDirection="locale"
            android:layout_below="@+id/currentaddress"
            android:layout_alignStart="@+id/register" />



</RelativeLayout>
